<UserControl x:Class="BakeryPR.Views.SalesHistory"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BakeryPR.Views" 
             xmlns:i="clr-namespace:System.Windows.Interactivity;assembly=System.Windows.Interactivity"
            xmlns:vm="clr-namespace:BakeryPR.ModelView"
             mc:Ignorable="d" 
              d:DesignHeight="{Binding winHeight}" d:DesignWidth="{Binding winWidth}" >
    <Grid>
        <Border Grid.Column="2"  BorderThickness="2" BorderBrush="BurlyWood" Margin="5">
            <Grid Grid.Column="2" Margin="5">
                <Grid.RowDefinitions>
                    <RowDefinition Height="50"></RowDefinition>
                    <RowDefinition></RowDefinition>
                </Grid.RowDefinitions>
                <TextBlock Style="{StaticResource headings}" TextAlignment="Center" >History</TextBlock>
                <Grid Grid.Row="1" Margin="5">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="50"></RowDefinition>
                        <RowDefinition></RowDefinition>
                    </Grid.RowDefinitions>
                    <TextBox Height="40" BorderThickness="3" Text="{Binding searchHisory,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}"></TextBox>
                    <ListView Grid.Row="1"  Margin="8"  ItemsSource="{Binding dailyCartHistory,Mode=TwoWay}"
                                  IsSynchronizedWithCurrentItem="True" 
                                   ScrollViewer.CanContentScroll="True">
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition></RowDefinition>
                                        <RowDefinition></RowDefinition>
                                        <RowDefinition></RowDefinition>
                                        <RowDefinition></RowDefinition>
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition></ColumnDefinition>
                                        <ColumnDefinition></ColumnDefinition>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Row="0">Customer Name</TextBlock>
                                    <TextBlock Grid.Row="1">Product Name</TextBlock>
                                    <TextBlock Grid.Row="2">Quantity</TextBlock>
                                    <TextBlock Grid.Row="3">Price</TextBlock>

                                    <TextBlock Margin="10 0 0 0" Grid.Row="0" Grid.Column="1" Text="{Binding customerName,Mode=TwoWay}"></TextBlock>
                                    <TextBlock Margin="10 0 0 0" Grid.Row="1" Grid.Column="1" Text="{Binding pName,Mode=TwoWay}"></TextBlock>
                                    <TextBlock Margin="10 0 0 0" Grid.Row="2" Grid.Column="1" Text="{Binding quantity,Mode=TwoWay}"></TextBlock>
                                    <TextBlock Margin="10 0 0 0" Grid.Row="3" Grid.Column="1" Text="{Binding price,Mode=TwoWay}"></TextBlock>

                                </Grid>
                            </DataTemplate>
                        </ListView.ItemTemplate>

                        <ListView.Style>
                            <Style TargetType="ListView">
                                <Style.Triggers>
                                    <Trigger Property="HasItems"
                         Value="False">
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="ListView">
                                                    <TextBlock Text="No items..."/>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </ListView.Style>
                    </ListView>
                </Grid>
            </Grid>
        </Border>
    </Grid>
</UserControl>
